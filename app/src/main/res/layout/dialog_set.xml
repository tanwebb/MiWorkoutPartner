<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Set Information"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/dialog_set_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reps"
        android:id="@+id/dialog_set_reps"
        android:layout_below="@+id/dialog_set_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:text="Weight (lbs)"
        android:id="@+id/dialog_set_weight"
        android:layout_alignTop="@+id/dialog_set_reps"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/add_reps_button"
        android:layout_below="@+id/dialog_set_reps"
        android:layout_alignRight="@+id/dialog_set_reps"
        android:layout_alignEnd="@+id/dialog_set_reps" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/add_weight_button"
        android:layout_alignTop="@+id/add_reps_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/dialog_set_weight"
        android:layout_alignStart="@+id/dialog_set_weight" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/changing_reps"
        android:layout_below="@+id/add_reps_button"
        android:layout_alignRight="@+id/add_reps_button"
        android:layout_alignEnd="@+id/add_reps_button" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="200"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/changing_weight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/add_weight_button"
        android:layout_alignLeft="@+id/add_weight_button"
        android:layout_alignStart="@+id/add_weight_button" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/subtract_reps_button"
        android:layout_below="@+id/changing_reps"
        android:layout_alignRight="@+id/changing_reps"
        android:layout_alignEnd="@+id/changing_reps" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/subtract_weight_button"
        android:layout_alignTop="@+id/subtract_reps_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/changing_weight"
        android:layout_alignStart="@+id/changing_weight" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="X"
        android:id="@+id/dialog_set_by"
        android:layout_above="@+id/subtract_reps_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>