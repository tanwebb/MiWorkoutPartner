<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Max Information"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/dialog_max_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/dialog_max_name"
        android:layout_below="@+id/dialog_max_textview"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Weight"
        android:id="@+id/dialog_max_weight"
        android:layout_below="@+id/dialog_max_name"
        android:layout_alignLeft="@+id/dialog_max_name"
        android:layout_alignStart="@+id/dialog_max_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="lbs"
        android:textColor="#ffffff"
        android:id="@+id/dialog_lbs_textview"
        android:gravity="center_vertical"
        android:layout_below="@+id/dialog_max_name"
        android:layout_toRightOf="@+id/dialog_max_weight"
        android:layout_toEndOf="@+id/dialog_max_weight"
        android:layout_alignBottom="@+id/dialog_max_weight"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Date"
        android:ems="10"
        android:id="@+id/dialog_max_date"
        android:layout_below="@+id/dialog_max_weight"
        android:layout_alignLeft="@+id/dialog_max_weight"
        android:layout_alignStart="@+id/dialog_max_weight" />


</RelativeLayout>